/*Menu*/
.o-menu {
  position fixed
  // top 0
  // left 0
  z-index 210

  // width 100%
  // max-width 80%
  // height 100%

  background-color white

  // transform translate3d(-100%, 0, 0)
  // transition all 0.2s ease-in-out

  +above(480px) {
    max-width 340px
  }
  +above(bp_medium) {
    padding-top 3.75em
  }

  // &.js-active {
  //   transform translate3d(0, 0, 0)
  // }

  &__profile {
    padding 1em
    margin-bottom 1em
    min-height 180px

    background url('../img/bg-perfil-menu.jpg') no-repeat center center
    background-size cover

    +above(bp_medium) {
      display none
    }

    &-content {
      display table
    }

    &-fig {
      width 70px
      height 70px

      border-radius 50%

      overflow hidden
    }

    &-pic,
    &-info {
      display table-cell
    }

    &-pic {
      vertical-align top
    }

    &-info {
      vertical-align middle

      padding-left 1em

      line-height 1.5
      font-size 1.2em
      font-weight 400

      color white
    }
  }

  &__logo {
    display none
    text-align center

    +above(480px) {
      margin-bottom 1em
    }

    +above(bp_medium) {
      display block
    }

    img {
      display inline-block
      max-width 50%

      +above(480px) {
        max-width 100%
      }
    }
  }

  &__item {
    &:last-child {
      border-top: 1px solid rgba(black, 0.08);
    }
  }

  &__link {
    display block
    padding 1em 2em

    font-weight 500

    color c_blue_beta

    transition all 0.2s ease-in-out

    +above(480px) {
      padding 1.5em 2em
    }

    &:hover,
    &.js-active {
      color c_blue_gamma
    }

    .o-icon {
      margin-right 1em
    }
  }

  &__overlay {
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 200

    display none

    background-color rgba(c_blue_alpha, 0.8)

    opacity 0

    transition all 0.2s ease-in-out
  }

  &__trigger {
    position fixed
    top 1em
    left 1em
    z-index 190

    display block

    transition all 0.2s ease-in-out

    +above(bp_medium) {
      z-index 220
    }

    &:hover {
      .o-menu__trigger-inner {
        span {
          &:nth-child(1) {
            width 80%
          }
          &:nth-child(2) {
            width 100%
          }
          &:nth-child(3) {
            width 80%
          }
        }
      }
    }

    &-inner {
      position relative

      display block
      width 1.5em
      height 1em
      margin 0.5em

      span {
        position absolute

        display block
        width 100%
        height 2px

        background-color white

        transition all 0.2s ease-in-out

        &:nth-child(1) {
          top 0
        }
        &:nth-child(2) {
          top 50%

          width 80%
          margin-top -1px
        }
        &:nth-child(3) {
          bottom 0
        }
      }
    }

    &.js-active {
      &:hover {
        .o-menu__trigger-inner {
          span {
            &:nth-child(1) {
              width 100%
            }
            &:nth-child(2) {
              width 80%
            }
            &:nth-child(3) {
              width 100%
            }
          }
        }
      }
      .o-menu__trigger-inner {
        span {
          background-color c_blue_alpha

          &:nth-child(1) {
            top 50%
            transform rotate(45deg)

            margin-top -1px
          }
          &:nth-child(2) {
            opacity 0
            transform translate3d(100%, 0, 0)
          }
          &:nth-child(3) {
            bottom 50%
            transform rotate(-45deg)

            margin-bottom -1px
          }
        }
      }
    }
  }

}
