/*splash component*/
.o-splash {
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 400

  display none
  width 100%
  height 100%
  padding 1em

  background url('../img/bg-splash.jpg') no-repeat center center
  background-size cover

  &__logo {
    vertical-align middle

    display table-cell
    width 100%

    text-align center

    img {
      display inline-block
    }
  }

  &[ng-cloak] {
    display table !important
  }
}
