/*Loader*/
.o-loader {
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 9999

  width 100%
  height 100%

  background-color c_gray

  &__content {
    position absolute
    top 50%
    left 50%

    width 126px
    height 126px
    margin-top -63px
    margin-left -63px

    text-align center
  }

  &__spinner {
    display inline-block
  }

  &__copy {
    display block
    margin-top 1rem

    text-transform uppercase
    font-weight 700

    color c_blue

    &--error {
      margin-top 0

      font-size 0.8em

      color c_error_txt
    }
  }
}
