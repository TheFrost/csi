/*table component*/
.o-table {
  width 100%

  border-collapse collapse

  &--bordered {
    border-top 1px solid rgba(black, 0.1)
    border-bottom 1px solid rgba(black, 0.1)
  }

  tr {
    &:last-child {
      td {
        border-bottom none
      }
    }

    &:hover {
      background-color c_gray

      cursor pointer
    }
  }

  td {
    padding 0.75rem 0

    font-size 0.9em

    border-bottom 1px solid rgba(black, 0.1)

    +above(bp_medium) {
      padding 2rem 1rem

      font-size 1.1em
    }
  }
}
