/*Travels*/
.o-travels {
  overflow hidden

  &__head {
    padding 2em 1em

    +above(bp_large + 1) {
      padding 2em 0
    }
  }

  &__table {
    /*mobile desktop switch temp styles*/
    &--desktop {
      display none

      +above(bp_medium) {
        display table
      }
    }
    &--mobile {
      +above(bp_medium) {
        display none
      }
    }
    /* // end mobile desktop switch temp styles*/

    td {
      padding-left 6px

      line-height 20px

      vertical-align top

      &:last-child {
        padding-left 0
        padding-right 8px
      }

      +above(bp_medium) {
        line-height 30px
      }
      +above(bp_large) {
        width 25%
      }
    }
  }

  &__important {
    font-weight 500
    font-size 1em

    +above(bp_medium) {
      font-size 1.1em
    }
  }

  &__status {
    font-weight 500

    &--entregado {
      color c_entregado
    }
    &--porllegar {
      color c_porllegar
    }
  }

  &__feedback {
    vertical-align middle !important
    text-align center

    +above(bp_medium) {
      text-align right
    }

    &-action {
      display inline-block

      text-align center

      color rgba(black, 0.1)

      &:hover {
        .o-travels__feedback {
          &-icon {
            color c_porllegar
          }
        }
      }

      &.js-done {
        .o-travels__feedback {
          &-icon {
            color c_porllegar
          }
          &-cal {
            display block
          }
          &-label {
            height 0
          }
        }
      }
    }

    &-icon {
      position relative

      font-size 2em
    }

    &-label {
      display block

      color rgba(black, 0.3)

      overflow hidden
    }

    &-cal {
      position absolute
      top 50%
      left 0
      transform translateY(-50%)

      display none
      width 100%

      font-family f_roboto
      font-size 0.4em

      color white
    }
  }

  &__footer {
    padding 1em
    margin 2em 0

    text-align center
  }

  &__seemore {
    display inline-block

    text-transform uppercase

    color c_gray-alpha

    &:hover {
      text-decoration underline
    }
  }

  /*travels route Steps detail*/
  &__route {
    position relative

    padding 2em 0

    &:after {
      content ''

      position absolute
      top 142px
      left 0
      z-index 10

      display block
      width 100%
      height 2px

      background-color c_gray-gamma
    }
  }

  &__steps {
    position relative
    z-index 11

    display table
    width 100%

    &-item {
      vertical-align middle

      display table-cell
      padding 1em

      text-align center
    }

    &-shape {
      display inline-block
      margin 1em 0

      border-radius 50%
      border 5px solid c_gray-gamma
      background-color c_gray-gamma

      &.js-done {
        .o-travels__steps-icon {
          border-color c_entregado
          background-color c_entregado
        }
      }
      &.js-progress {
        .o-travels__steps-icon {
          border-color c_entregado
          color c_entregado
        }
      }
      &.js-pending {
        .o-travels__steps-icon {
          border-color c_red_alpha
          background-color c_red_alpha
        }
      }
    }

    &-icon {
      display inline-block
      width 70px
      height 70px

      line-height 58px
      font-size 1.5em

      border-radius 50%
      border 5px solid transparent
      color white
    }

    &-txt {
      display block

      font-weight 500
      text-transform uppercase

      &--blue {
        color c_blue_omega
      }

      &--gray {
        color c_gray-beta
      }
    }
  }

}
