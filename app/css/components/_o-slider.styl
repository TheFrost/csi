/*Slider*/
.o-slider {
  height 250px

  +above(bp_medium) {
    height 450px
  }

  &__slide {
    position relative

    width 100%
    height 100%
  }

  &__img {
    position absolute
    top 0
    left 0

    display block
    width 100%
    height 100%

    background-repeat no-repeat
    background-position center center
    background-size cover
  }
}
