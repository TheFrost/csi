/*Animation catalog*/
.a-fade {
  &.ng-animate {
    transition 0.2s linear opacity
  }

  &.ng-enter {
    opacity 0
  }

  &.ng-enter.ng-enter-active {
    opacity 1
  }

  &.ng-leave {
    opacity 1
  }

  &.ng-leave.ng-leave-active {
    opacity 0
  }

  &.ng-hide {
    opacity 0
  }

  &.ng-show {
    opacity 1
  }
}


[ui-view] {
  position absolute
  top 0
  bottom 0
  left 0
  right 0
}
