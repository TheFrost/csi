/*Home page*/
.o-home {
  height 100%

  &__cover {
    height 30%
    min-height 450px

    background url('../img/img-portada.jpg') no-repeat center center
    background-size cover
  }

  &__title {
    margin-top 0
    margin-bottom 48px
    margin-left 1rem
    padding 0.25em 0.5em

    font-weight 300

    border-left 4px solid currentColor
    color white

    +above(bp_large + 1) {
      margin-left 0
    }
  }

  &__content {
    position relative
    z-index 1

    margin-top -188px
  }
}
