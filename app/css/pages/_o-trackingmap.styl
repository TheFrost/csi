/*Tracking map*/
.o-trackingmap {
  position relative

  width 100%
  height calc(100vh - 65px)

  &__overlay {
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 10

    display table
    width 100%
    height 100%

    text-align center

    background-color rgba(c_gray-gamma, 0.9);
    color c_gray-alpha

    &-inner {
      vertical-align middle

      display table-cell
      width 100%
    }
  }

  &__back {
    display inline-block
    color currentColor
  }

  &__title {
    text-transform uppercase
  }

  &__map {
    height 100%

    .angular-google-map {
      width 100%
      height 100%

      &-container {
        width 100%
        height 100%
      }
    }
  }
}
