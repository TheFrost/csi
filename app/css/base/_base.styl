/*Base Styles*/
html, body {
  position relative

  width 100%
  height 100%
  min-height 100%
  margin 0
  padding 0

  font-family f_roboto
  font-size 16px
  font-weight 300

  color c_gray-alpha

  -webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

figure {
  margin 0
}

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

  outline none
}

input {
  font-size 1em

  /*Hack autocomplete browser style*/
  -webkit-box-shadow: 0 0 0px 1000px c_blue_alpha inset;
  -webkit-text-fill-color: white;
}

a {
  text-decoration none
}

button {
  outline none
  cursor pointer
}


h1, h2, h3, h4, h5, h6 {
  font-weight 300
}


/*Angular Material base styles*/
md-content.md-default-theme,
md-content {
  color currentColor
}
